"settings": [
{
"type": "header",
"content": "Product Options"
},
{
"type": "checkbox",
"id": "show_quantity_selector",
"label": "Show quantity selector",
"default": true
},
{
"type": "checkbox",
"id": "show_buy_it_now",
"label": "Show 'Buy It Now' button",
"default": false
},
{
"type": "header",
"content": "Shipping & Returns"
},
{
"type": "richtext",
"id": "shipping_returns_text",
"label": "Shipping & Returns text",
