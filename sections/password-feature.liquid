      "max_blocks": 1,
      "blocks": [
        {
          "type": "password_banner",
          "name": "Password Banner",
          "settings": [
            {
              "type": "radio",
              "id": "background_type",
              "label": "Background Type",
              "options": [
                {
                  "value": "image",
                  "label": "Image"
                }, {
                  "value": "video",
                  "label": "Video"
                }
              ],
              "default": "image"
            },
            {
              "type": "select",
              "id": "text_color",
              "label": "Text Color",
              "options": [
                {
                  "value": "white",
                  "label": "White"
                }, {
                  "value": "black",
                  "label": "Black"
                }
              ],
              "default": "white"
            },
            {
              "type": "header",
              "content": "Vertical Positioning"
            },
            {
              "type": "select",
              "id": "desktop_vertical_position",
              "label": "Desktop Text Position",
              "options": [
                {
                  "value": "top",
                  "label": "Top"
                }, {
                  "value": "center",
                  "label": "Center"
                }, {
                  "value": "bottom",
                  "label": "Bottom"
                }
              ],
              "default": "center",
              "info": "Choose where to position the text vertically on desktop devices"
            }, {
              "type": "select",
              "id": "mobile_vertical_position",
              "label": "Mobile Text Position",
              "options": [
                {
                  "value": "top",
                  "label": "Top"
                }, {
                  "value": "center",
                  "label": "Center"
                }, {
                  "value": "bottom",
                  "label": "Bottom"
                }
              ],
              "default": "center",
              "info": "Choose where to position the text vertically on mobile devices. If not set, will use desktop setting."
            }, {
              "type": "header",
              "content": "Background"
            }, {
              "type": "image_picker",
              "id": "image",
              "label": "Background Image",
              "info": "Used as background when Image is selected"
            }, {
              "type": "image_picker",
              "id": "mobile_image",
              "label": "Mobile Background Image",
              "info": "Optional. If not provided, desktop image will be used on mobile devices."
            }, {
              "type": "video",
              "id": "video",
              "label": "Background Video",
              "info": "Upload or select a video. Only used when Video is selected."
            }, {
              "type": "range",
              "id": "overlay_opacity",
