<!-- HERO BANNER -->
<section class="hero-banner">
    <div class="hero-banner__content">
        <h1>{{ section.settings.heading }}</h1>
        <h2>{{ section.settings.subheading }}</h2>
        <a href="{{ section.settings.button_link }}" class="hero-banner__button">
            {{ section.settings.button_text }}
        </a>
    </div>
</section>

<!-- STYLES FOR HERO BANNER -->
{% style %}
:root {
--header-height: 5.625rem;
}

.hero-banner {
display: flex;
justify-content: flex-start;
align-items: center;
position: relative;
width: 100%;
height: calc(100vh - var(--header-height));
min-height: 40rem;
background-size: cover;
background-position: center top;
background-repeat: no-repeat;
overflow: hidden;
margin-top: var(--header-height);
padding: 0 2rem;
}

.hero-banner {
background-image: url({{ section.settings.image | img_url: 'master' }});
}

.hero-banner__content {
position: relative;
max-width: 27rem;
text-align: left;
color: white;
margin-left: 10%;
}

.hero-banner__content h1 {
font-size: 4.375rem;
font-weight: 600;
line-height: 1.1;
letter-spacing: -1%;
margin-bottom: 1.4rem;
font-family: "adobe-caslon-pro", serif;
font-weight: 600;
font-style: normal;
}

.hero-banner__content h2 {
font-size: 1.25rem;
font-weight: 300;
line-height: 1.4;
letter-spacing: -1%;
margin-bottom: 2.5rem;
font-family: adobe-caslon-pro, serif;
font-weight: 400;
font-style: normal;
}

.hero-banner__content .hero-banner__button {
display: inline-block;
margin-top: 1rem;
font-size: 1rem;
font-weight: 400;
text-decoration: none;
background-color: transparent;
color: white;
cursor: pointer;
transition: color 0.3s ease;
/* padding: 0.75rem 1.5rem; */
min-width: 44px;
min-height: 44px;
}

.hero-banner__button:hover {
text-decoration: underline !important;
text-underline-offset: 0.2rem;
}

/* Responsive styles */
@media (max-width: 1200px) {
.hero-banner__content h1 {
font-size: 3.75rem;
}
}

@media (max-width: 992px) {
.hero-banner__content h1 {
font-size: 3rem;
}

.hero-banner__content {
max-width: 24rem;
}
}

@media (max-width: 768px) {
.hero-banner {
min-height: 35rem;
align-items: center;
}

.hero-banner__content {
margin-left: 5%;
max-width: 80%;
}

.hero-banner__content h1 {
font-size: 2.5rem;
margin-bottom: 1rem;
}

.hero-banner__content h2 {
font-size: 1.125rem;
margin-bottom: 2rem;
}
}

@media (max-width: 576px) {
.hero-banner {
margin-top: 5rem;
height: 75vh;
}

.hero-banner__content h1 {
font-size: 2.25rem;
}

.hero-banner__content h2 {
font-size: 1rem;
margin-bottom: 1.5rem;
}
}

/* Fix for iOS Safari 100vh issue */
@supports (-webkit-touch-callout: none) {
.hero-banner {
height: calc(100vh - var(--header-height) - 80px);
min-height: 30rem;
}
}
{% endstyle %}

<!-- SCHEMA FOR BANNER TEMPLATE -->
{% schema %}
{
"name": "Hero Section",
"limit": 1,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Hero Image"
},
{
"type": "text",
"id": "heading",
"label": "Main Heading",
"default": "Jewelry that speaks for you"
},
{
"type": "text",
"id": "subheading",
"label": "Subheading",
"default": "Create bold accents with exquisite pieces that highlight your individuality."
},
{
"type": "text",
"id": "button_text",
"label": "Button Text",
"default": "SHOP NOW"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
}
],
"presets": [
{
"name": "Hero Banner"
}
]
}
{% endschema %}