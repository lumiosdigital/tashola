<!-- HERO BANNER -->
<section class="hero-banner {% if section.settings.background_type == 'video' %}hero-banner--video{% endif %}">
    {% if section.settings.background_type == 'video' and section.settings.video != blank %}
    <div class="hero-banner__video-container">
        {{ section.settings.video | video_tag: class: 'hero-banner__video-background', autoplay: true, loop: true,
        muted: true, playsinline: true }}
        <div class="hero-banner__overlay"
            style="background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});"></div>
    </div>
    {% endif %}

    <div class="hero-banner__content">
        <h1>{{ section.settings.heading }}</h1>
        <h2>{{ section.settings.subheading }}</h2>
        <a href="{{ section.settings.button_link }}" class="hero-banner__button">
            {{ section.settings.button_text }}
        </a>
    </div>
</section>

<!-- STYLES FOR HERO BANNER -->
{% style %}
:root {
--header-height: 5.625rem;
}

.hero-banner {
display: flex;
justify-content: flex-start;
align-items: center;
position: relative;
width: 100%;
height: calc(100vh - var(--header-height));
min-height: 40rem;
overflow: hidden;
margin-top: var(--header-height);
padding: 0 2rem;
}

{% if section.settings.background_type == 'image' %}
.hero-banner {
background-image: url({{ section.settings.image | img_url: '2048x', scale: 2, quality: 100 }});
background-size: cover;
background-position: center top;
background-repeat: no-repeat;
}
{% endif %}

/* Video background styles */
.hero-banner__video-container {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
z-index: -1;
overflow: hidden;
}

.hero-banner__video-background {
position: absolute;
top: 50%;
left: 50%;
width: 100%;
height: 100%;
min-width: 100%;
min-height: 100%;
transform: translate(-50%, -50%);
object-fit: cover;
}

.hero-banner__overlay {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 100%;
}

.hero-banner__content {
position: relative;
max-width: 27rem;
text-align: left;
color: white;
margin-left: 10%;
z-index: 2;
}

.hero-banner__content h1 {
font-size: 4.375rem;
font-weight: 600;
line-height: 1.1;
letter-spacing: -1%;
margin-bottom: 1.4rem;
font-family: "adobe-caslon-pro", serif;
font-weight: 600;
font-style: normal;
}

.hero-banner__content h2 {
font-size: 1.25rem;
font-weight: 300;
line-height: 1.4;
letter-spacing: -1%;
margin-bottom: 2.5rem;
font-family: adobe-caslon-pro, serif;
font-weight: 400;
font-style: normal;
}

.hero-banner__content .hero-banner__button {
display: inline-block;
margin-top: 1rem;
font-size: 1rem;
font-weight: 400;
text-decoration: none;
background-color: transparent;
color: white;
cursor: pointer;
transition: color 0.3s ease;
/* padding: 0.75rem 1.5rem; */
min-width: 44px;
min-height: 44px;
}

.hero-banner__button:hover {
text-decoration: underline !important;
text-underline-offset: 0.2rem;
}

/* Responsive styles */
@media (max-width: 1200px) {
.hero-banner__content h1 {
font-size: 3.75rem;
}
}

@media (max-width: 992px) {
.hero-banner__content h1 {
font-size: 3rem;
}

.hero-banner__content {
max-width: 24rem;
}
}

@media (max-width: 768px) {
.hero-banner {
min-height: 35rem;
align-items: center;
{% if section.settings.background_type == 'image' %}
background-image: url({{ section.settings.mobile_image | default: section.settings.image | img_url: 'master' }});
{% endif %}
}

.hero-banner__content {
margin-left: 5%;
max-width: 80%;
}

.hero-banner__content h1 {
font-size: 2.5rem;
margin-bottom: 1rem;
}

.hero-banner__content h2 {
font-size: 1.125rem;
margin-bottom: 2rem;
}
}

@media (max-width: 576px) {
.hero-banner {
margin-top: 5rem;
height: 90vh;
}

.hero-banner__content h1 {
font-size: 2.25rem;
}

.hero-banner__content h2 {
font-size: 1rem;
margin-bottom: 1.5rem;
}
}

/* Fix for iOS Safari 100vh issue */
@supports (-webkit-touch-callout: none) {
.hero-banner {
height: calc(100vh - var(--header-height) - 80px);
min-height: 30rem;
}
}
{% endstyle %}

