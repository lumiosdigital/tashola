},
{
"type": "text",
"id": "banner_1_text",
"label": "Banner 1 Text",
"default": "Classic earrings to embody timeless elegance"
},
{
"type": "url",
"id": "banner_1_link",
"label": "Banner 1 Link"
},
{
"type": "image_picker",
"id": "banner_2_image",
"label": "Banner 2 Image"
},
{
"type": "text",
"id": "banner_2_title",
"label": "Banner 2 Title",
"default": "Stellar Collection"
},
{
"type": "text",
"id": "banner_2_text",
"label": "Banner 2 Text",
"default": "Embrace the celestial beauty"
},
{
"type": "url",
"id": "banner_2_link",
"label": "Banner 2 Link"
}
]
}
{% endschema %}