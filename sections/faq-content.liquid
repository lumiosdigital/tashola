{% schema %}
{
"name": "FAQ Content",
"tag": "section",
"class": "faq-content-section",
"settings": [
{
"type": "text",
"id": "page_title",
"label": "Page Title",
"default": "Frequently Asked Questions"
},
{
"type": "richtext",
"id": "page_description",
"label": "Page Description",
"default": "<p>Tashola is a jewelry brand dedicated to timeless elegance and modern craftsmanship. Inspired by beauty in simplicity, our pieces are designed to complement every moment, from everyday wear to special occasions. Using high-quality materials like sterling silver, 18K gold plating, and natural gemstones, we create jewelry that is both refined and meaningful.</p>"
}
],
"blocks": [
{
"type": "faq_item",
"name": "FAQ Item",
"settings": [
{
"type": "text",
"id": "question",
"label": "Question",
"default": "Question goes here"
},
{
"type": "richtext",
"id": "answer",
"label": "Answer",
"default": "<p>Answer goes here</p>"
},
{
"type": "checkbox",
"id": "expanded_by_default",
"label": "Expanded by default",
"default": false
}
]
}
],
"presets": [
{
"name": "FAQ Content"
}
]
}
{% endschema %}

<div class="faq-content-inner">
    <h1 class="faq-title">{{ section.settings.page_title }}</h1>
    <div class="faq-description">{{ section.settings.page_description }}</div>

    {% for block in section.blocks %}
    {% if block.type == "faq_item" %}
    <div class="faq-accordion-item" {{ block.shopify_attributes }}>
        <button class="faq-question"
            aria-expanded="{% if block.settings.expanded_by_default %}true{% else %}false{% endif %}">
            <span>{{ block.settings.question }}</span>
            <span class="faq-toggle">{% if block.settings.expanded_by_default %}−{% else %}+{% endif %}</span>
        </button>
        <div class="faq-answer" {% unless block.settings.expanded_by_default %}style="display: none;" {% endunless %}>
            {{ block.settings.answer }}
        </div>
    </div>
    {% endif %}
    {% endfor %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Handle FAQ accordion
        const faqQuestions = document.querySelectorAll('.faq-question');

        faqQuestions.forEach(question => {
            question.addEventListener('click', function () {
                const answer = this.nextElementSibling;
                const toggle = this.querySelector('.faq-toggle');
                const isExpanded = this.getAttribute('aria-expanded') === 'true';

                if (isExpanded) {
                    answer.style.display = 'none';
                    toggle.textContent = '+';
                    this.setAttribute('aria-expanded', 'false');
                } else {
                    answer.style.display = 'block';
                    toggle.textContent = '−';
                    this.setAttribute('aria-expanded', 'true');
                }
            });
        });
    });
</script>

<style>
    /* Content area styles */
    .faq-content-inner {
        max-width: 800px;
    }

    .faq-title {
        font-family: var(--font-heading);
        font-size: 2.75rem;
        color: var(--color-text);
        margin: 0 0 1.5rem;
        font-weight: 600;
    }

    .faq-description {
        font-family: var(--font-heading);
        font-size: 1.125rem;
        line-height: 1.6;
        color: var(--color-text);
        margin-bottom: 3rem;
    }

    /* FAQ accordion styles */
    .faq-accordion-item {
        border-bottom: 1px solid rgba(55, 55, 54, 0.1);
    }

    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
        background: none;
        border: none;
        cursor: pointer;
        width: 100%;
        text-align: left;
        font-family: var(--font-body);
        font-size: 0.875rem;
        font-weight: 400;
        text-transform: uppercase;
        color: var(--color-text);
    }

    .faq-toggle {
        font-size: 1.5rem;
        font-weight: 300;
        margin-left: 2rem;
    }

    .faq-answer {
        padding: 0 0 1.5rem;
        font-family: var(--font-body);
        font-size: 0.9375rem;
        line-height: 1.6;
        color: var(--color-text);
    }

    /* Responsive styles */
    @media screen and (max-width: 992px) {
        .faq-title {
            font-size: 2.25rem;
        }
    }

    @media screen and (max-width: 768px) {
        .faq-title {
            font-size: 2rem;
        }

        .faq-description {
            font-size: 1rem;
        }
    }

    @media screen and (max-width: 576px) {
        .faq-title {
            font-size: 1.75rem;
        }

        .faq-question {
            font-size: 0.8125rem;
        }

        .faq-answer {
            font-size: 0.875rem;
        }
    }
</style>