<!-- 404 PAGE SECTION -->
<section class="page-404">
  <!-- Main 404 Content -->
  <div class="page-404__hero">
    <div class="page-404__content">
      <h1 class="page-404__title">{{ section.settings.title | default: "Page Not Found" }}</h1>
      <p class="page-404__message">{{ section.settings.message | default: "Sorry, the page you're looking for doesn't exist. Here are some helpful links to get you back on track." }}</p>
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="page-404__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Help Cards -->
  {% if section.blocks.size > 0 %}
    <div class="page-404__cards">
      {% if section.settings.cards_heading != blank %}
        <div class="page-404__cards-header">
          <h2 class="page-404__cards-title">{{ section.settings.cards_heading }}</h2>
        </div>
      {% endif %}
      <div class="page-404__cards-container">
        {% for block in section.blocks %}
          {% if block.type == 'help_card' %}
            <div class="help-card" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="help-card__link">
              {% endif %}

              <div
                class="help-card__background"
                {% if block.settings.image != blank %}
                style="background-image: url('{{ block.settings.image | img_url: '600x400' }}');"
                {% endif %}></div>

              <div class="help-card__content help-card__content--{{ block.settings.text_color | default: 'white' }}">
                {% if block.settings.title != blank %}
                  <h3 class="help-card__title">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.text != blank %}
                  <p class="help-card__text">{{ block.settings.text }}</p>
                {% endif %}
              </div>

              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

<style>
  .page-404 {
    min-height: calc(100vh - 90px);
    background-color: #F6F4F3;
    display: flex;
    flex-direction: column;
  }

  .page-404__hero {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    margin-top: 90px;
  }

  .page-404__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .page-404__title {
    font-family: "adobe-caslon-pro"
    , serif;
    font-size: 3.5rem;
    font-weight: 600;
    color: #373736;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .page-404__message {
    font-family: "Inter"
    , sans-serif;
    font-size: 1.125rem;
    color: #373736;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .page-404__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 2rem;
    background-color: #FFA38B;
    color: #ffffff;
    text-decoration: none;
    font-family: "Inter"
    , sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    border-radius: 30px;
    transition: background-color 0.3s ease;
    min-width: 44px;
    min-height: 44px;
  }

  .page-404__button:hover {
    background-color: #e88871;
    text-decoration: none;
  }

  .page-404__cards {
    background-color: #ffffff;
    padding: 3rem 0;
  }

  .page-404__cards-header {
    text-align: center;
    margin-bottom: 2.5rem;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2rem;
  }

  .page-404__cards-title {
    font-family: "adobe-caslon-pro"
    , serif;
    font-size: 2.25rem;
    font-weight: 600;
    color: #373736;
    margin: 0;
    line-height: 1.2;
  }

  .page-404__cards-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .help-card {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    overflow: hidden;
    width: 100%;
    height: 400px;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .help-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .help-card__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #f5f3ef;
    transition: transform 1s ease;
  }

  .help-card:hover .help-card__background {
    transform: scale(1.05);
    cursor: pointer;
  }

  .help-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    z-index: 2;
  }

  .help-card__content--white {
    color: #ffffff;
  }

  .help-card__content--white .help-card__title {
    color: #ffffff;
  }

  .help-card__content--white .help-card__text {
    color: #ffffff;
  }

  .help-card__content--black {
    color: #373736;
    background: linear-gradient(transparent, rgba(255, 255, 255, 0.9));
  }

  .help-card__content--black .help-card__title {
    color: #373736;
  }

  .help-card__content--black .help-card__text {
    color: #373736;
  }

  .help-card__title {
    font-family: "adobe-caslon-pro"
    , serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .help-card__text {
    font-family: "Inter"
    , sans-serif;
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
  }

  /* Mobile styles */
  @media (max-width: 1024px) {
    .page-404__hero {
      margin-top: 70px;
      padding: 2rem 1.25rem;
    }

    .page-404__title {
      font-size: 2.5rem;
    }

    .page-404__message {
      font-size: 1rem;
    }

    .page-404__cards-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 0 1.25rem;
    }

    .page-404__cards {
      padding: 2rem 0;
    }

    .page-404__cards-header {
      margin-bottom: 2rem;
      padding: 0 1.25rem;
    }

    .page-404__cards-title {
      font-size: 2rem;
    }
  }

  @media (max-width: 576px) {
    .page-404__title {
      font-size: 2rem;
    }

    .page-404__message {
      font-size: 0.875rem;
      margin-bottom: 2rem;
    }

    .page-404__button {
      padding: 0.6rem 1.5rem;
      font-size: 0.75rem;
    }

    .help-card__content {
      padding: 1.25rem;
    }

    .help-card__title {
      font-size: 1.125rem;
    }

    .page-404__cards-title {
      font-size: 1.75rem;
    }
  }
</style>

