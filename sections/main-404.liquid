<!-- 404 PAGE SECTION -->
<section class="page-404">
  <!-- Main 404 Content -->
  <div class="page-404__hero">
    <div class="page-404__content">
      <h1 class="page-404__title">{{ section.settings.title | default: "Page Not Found" }}</h1>
      <p class="page-404__message">{{ section.settings.message | default: "Sorry, the page you're looking for doesn't exist. Here are some helpful links to get you back on track." }}</p>
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="page-404__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Help Cards -->
  {% if section.blocks.size > 0 %}
    <div class="page-404__cards">
      <div class="page-404__cards-container">
        {% for block in section.blocks %}
          {% if block.type == 'help_card' %}
            <div class="help-card" {{ block.shopify_attributes }}>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="help-card__link">
              {% endif %}
                
                {% if block.settings.image != blank %}
                  <div class="help-card__image-wrapper">
                    <img src="{{ block.settings.image | img_url: '400x300' }}" 
                         alt="{{ block.settings.image.alt | default: block.settings.title }}"
                         class="help-card__image">
                  </div>
                {% endif %}
                
                <div class="help-card__content">
                  {% if block.settings.title != blank %}
                    <h3 class="help-card__title">{{ block.settings.title }}</h3>
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <p class="help-card__text">{{ block.settings.text }}</p>
                  {% endif %}
                </div>
                
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

<!-- STYLES FOR 404 PAGE -->
{% style %}
.page-404 {
  min-height: calc(100vh - var(--header-height));
  background-color: var(--background-gray);
  display: flex;
  flex-direction: column;
}

.page-404__hero {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
  margin-top: var(--header-height);
}

.page-404__content {
  text-align: center;
  max-width: 600px;
  margin: 0 auto;
}

.page-404__title {
  font-family: var(--font-heading);
  font-size: 3.5rem;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 1.5rem;
  line-height: 1.1;
}

.page-404__message {
  font-family: var(--font-body);
  font-size: 1.125rem;
  color: var(--primary-color);
  line-height: 1.6;
  margin-bottom: 2.5rem;
}

.page-404__button {
  display: inline-block;
  padding: 0.75rem 2rem;
  background-color: var(--secondary-color);
  color: var(--white);
  text-decoration: none;
  font-family: var(--font-body);
  font-size: 0.875rem;
  font-weight: 500;
  text-transform: uppercase;
  border-radius: 30px;
  transition: background-color 0.3s ease;
  min-width: 44px;
  min-height: 44px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.page-404__button:hover {
  background-color: #e88871;
  text-decoration: none;
}

.page-404__cards {
  background-color: var(--white);
  padding: 3rem 0;
}

.page-404__cards-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.help-card {
  background-color: var(--white);
  border: 1px solid #e0e0e0;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.help-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.help-card__link {
  display: flex;
  flex-direction: column;
  height: 100%;
  text-decoration: none;
  color: inherit;
}

.help-card__image-wrapper {
  width: 100%;
  height: 200px;
  overflow: hidden;
  position: relative;
}

.help-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.help-card:hover .help-card__image {
  transform: scale(1.05);
}

.help-card__content {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.help-card__title {
  font-family: var(--font-heading);
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 0.75rem;
  line-height: 1.3;
}

.help-card__text {
  font-family: var(--font-body);
  font-size: 0.875rem;
  color: var(--primary-color);
  line-height: 1.5;
  margin: 0;
  flex: 1;
}

/* Responsive styles */
@media (max-width: 992px) {
  .page-404__hero {
    padding: 3rem 1.5rem;
  }
  
  .page-404__title {
    font-size: 3rem;
  }
  
  .page-404__cards-container {
    padding: 0 1.5rem;
  }
}

@media (max-width: 768px) {
  .page-404__hero {
    margin-top: 70px; /* Mobile header height */
    padding: 2rem 1.25rem;
  }
  
  .page-404__title {
    font-size: 2.5rem;
  }
  
  .page-404__message {
    font-size: 1rem;
  }
  
  .page-404__cards-container {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 0 1.25rem;
  }
  
  .page-404__cards {
    padding: 2rem 0;
  }
  
  .help-card__image-wrapper {
    height: 180px;
  }
}

@media (max-width: 576px) {
  .page-404__title {
    font-size: 2rem;
  }
  
  .page-404__message {
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }
  
  .page-404__button {
    padding: 0.6rem 1.5rem;
    font-size: 0.75rem;
  }
  
  .help-card__content {
    padding: 1.25rem;
  }
  
  .help-card__title {
    font-size: 1.125rem;
  }
  
  .help-card__image-wrapper {
    height: 160px;
  }
}
{% endstyle %}

