{% doc %}
  @prompt
    please generate a pure text section that I can put a row of text in
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    font-weight: {{ block.settings.font_weight }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-text-content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-text-content-{{ ai_gen_id }} h1,
  .ai-text-content-{{ ai_gen_id }} h2,
  .ai-text-content-{{ ai_gen_id }} h3,
  .ai-text-content-{{ ai_gen_id }} h4,
  .ai-text-content-{{ ai_gen_id }} h5,
  .ai-text-content-{{ ai_gen_id }} h6 {
    margin: 0;
    color: inherit;
  }

  @media screen and (max-width: 749px) {
    .ai-text-block-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 | round }}px {{ block.settings.padding_horizontal | times: 0.7 | round }}px {{ block.settings.padding_bottom | times: 0.7 | round }}px {{ block.settings.padding_horizontal | times: 0.7 | round }}px;
    }

    .ai-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.text != blank %}
    <div class="ai-text-content-{{ ai_gen_id }}">
      {{ block.settings.text }}
    </div>
  {% else %}
    <div class="ai-text-content-{{ ai_gen_id }}" style="color: #999; font-style: italic;">
      Add your text content here
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Text block",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add your text content here. You can format it with headings, paragraphs, and other styling.</p>"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "line_height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "label": "Line height",
      "default": 1.5
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Text block"
    }
  ]
}
{% endschema %}