{% doc %}
  @prompt
    add a button with a customizable name and customer can click into this button and show a carousel of products from a collection I can choose
    this button can choose right/left/central align
    also the font and all colours can be amended
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-button-wrapper-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.button_alignment }};
    padding: 20px 0;
  }

  .ai-carousel-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
    font-weight: {{ block.settings.button_font.weight }};
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-carousel-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-carousel-modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-carousel-modal-{{ ai_gen_id }}.active {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  .ai-carousel-modal-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.modal_bg_color }};
    border-radius: {{ block.settings.modal_border_radius }}px;
    padding: 40px;
    max-width: 90%;
    max-height: 90%;
    overflow: hidden;
    position: relative;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .ai-carousel-modal-{{ ai_gen_id }}.active .ai-carousel-modal-content-{{ ai_gen_id }} {
    transform: scale(1);
  }

  .ai-carousel-close-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
    color: {{ block.settings.close_button_color }};
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }

  .ai-carousel-close-{{ ai_gen_id }}:hover {
    color: {{ block.settings.close_button_hover_color }};
  }

  .ai-carousel-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-carousel-title-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
    font-size: {{ block.settings.carousel_title_size }}px;
    color: {{ block.settings.carousel_title_color }};
    font-family: {{ block.settings.carousel_title_font.family }}, {{ block.settings.carousel_title_font.fallback_families }};
    font-weight: {{ block.settings.carousel_title_font.weight }};
  }

  .ai-carousel-track-wrapper-{{ ai_gen_id }} {
    overflow: hidden;
    position: relative;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    transition: transform 0.4s ease;
  }

  .ai-carousel-product-{{ ai_gen_id }} {
    flex: 0 0 calc(33.333% - 14px);
    background-color: {{ block.settings.product_card_bg_color }};
    border-radius: {{ block.settings.product_card_border_radius }}px;
    padding: 20px;
    text-align: center;
  }

  .ai-carousel-product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.product_image_border_radius }}px;
    margin-bottom: 15px;
  }

  .ai-carousel-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.product_image_border_radius }}px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-carousel-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-carousel-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin-bottom: 10px;
    font-weight: 600;
  }

  .ai-carousel-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 15px;
  }

  .ai-carousel-product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.view_button_bg_color }};
    color: {{ block.settings.view_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.view_button_border_radius }}px;
    transition: all 0.3s ease;
  }

  .ai-carousel-product-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.view_button_hover_bg_color }};
    color: {{ block.settings.view_button_hover_text_color }};
  }

  .ai-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_bg_color }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    transition: all 0.3s ease;
    z-index: 5;
  }

  .ai-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg_color }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-carousel-nav-prev-{{ ai_gen_id }} {
    left: -25px;
  }

  .ai-carousel-nav-next-{{ ai_gen_id }} {
    right: -25px;
  }

  .ai-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }

  @media screen and (max-width: 990px) {
    .ai-carousel-product-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - 10px);
    }

    .ai-carousel-modal-content-{{ ai_gen_id }} {
      padding: 30px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-product-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-carousel-nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
      font-size: 20px;
    }

    .ai-carousel-nav-prev-{{ ai_gen_id }} {
      left: -20px;
    }

    .ai-carousel-nav-next-{{ ai_gen_id }} {
      right: -20px;
    }

    .ai-carousel-modal-content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<div class="ai-carousel-button-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <button class="ai-carousel-button-{{ ai_gen_id }}" aria-label="{{ block.settings.button_text }}">
    {{ block.settings.button_text }}
  </button>
</div>

<product-carousel-modal-{{ ai_gen_id }} class="ai-carousel-modal-{{ ai_gen_id }}">
  <div class="ai-carousel-modal-content-{{ ai_gen_id }}">
    <button class="ai-carousel-close-{{ ai_gen_id }}" aria-label="Close">×</button>
    
    <div class="ai-carousel-container-{{ ai_gen_id }}">
      {% if block.settings.carousel_title != blank %}
        <h2 class="ai-carousel-title-{{ ai_gen_id }}">{{ block.settings.carousel_title }}</h2>
      {% endif %}

      {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
        <div class="ai-carousel-track-wrapper-{{ ai_gen_id }}">
          <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-nav-prev-{{ ai_gen_id }}" aria-label="Previous">‹</button>
          
          <div class="ai-carousel-track-{{ ai_gen_id }}">
            {% for product in block.settings.collection.products limit: block.settings.products_limit %}
              <div class="ai-carousel-product-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-carousel-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-carousel-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                
                <h3 class="ai-carousel-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <div class="ai-carousel-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                <a href="{{ product.url }}" class="ai-carousel-product-link-{{ ai_gen_id }}">
                  {{ block.settings.view_product_text }}
                </a>
              </div>
            {% endfor %}
          </div>
          
          <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-nav-next-{{ ai_gen_id }}" aria-label="Next">›</button>
        </div>
      {% else %}
        <div class="ai-carousel-empty-{{ ai_gen_id }}">
          Please select a collection to display products
        </div>
      {% endif %}
    </div>
  </div>
</product-carousel-modal-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarouselModal{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerView = 3;
      }

      connectedCallback() {
        this.button = document.querySelector('.ai-carousel-button-{{ ai_gen_id }}');
        this.modal = this;
        this.closeBtn = this.querySelector('.ai-carousel-close-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-carousel-track-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-carousel-nav-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-carousel-nav-next-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-carousel-product-{{ ai_gen_id }}');

        if (this.button) {
          this.button.addEventListener('click', () => this.openModal());
        }

        if (this.closeBtn) {
          this.closeBtn.addEventListener('click', () => this.closeModal());
        }

        this.addEventListener('click', (e) => {
          if (e.target === this) {
            this.closeModal();
          }
        });

        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.navigate(-1));
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.navigate(1));
        }

        window.addEventListener('resize', () => this.updateItemsPerView());
        this.updateItemsPerView();
        this.updateNavButtons();
      }

      openModal() {
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }

      updateItemsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.itemsPerView = 1;
        } else if (width <= 990) {
          this.itemsPerView = 2;
        } else {
          this.itemsPerView = 3;
        }
        this.updateCarousel();
      }

      navigate(direction) {
        const maxIndex = Math.max(0, this.products.length - this.itemsPerView);
        this.currentIndex = Math.max(0, Math.min(maxIndex, this.currentIndex + direction));
        this.updateCarousel();
      }

      updateCarousel() {
        if (!this.track || this.products.length === 0) return;

        const productWidth = this.products[0].offsetWidth;
        const gap = 20;
        const offset = -(this.currentIndex * (productWidth + gap));
        this.track.style.transform = `translateX(${offset}px)`;
        this.updateNavButtons();
      }

      updateNavButtons() {
        if (!this.prevBtn || !this.nextBtn) return;

        const maxIndex = Math.max(0, this.products.length - this.itemsPerView);
        this.prevBtn.disabled = this.currentIndex === 0;
        this.nextBtn.disabled = this.currentIndex >= maxIndex;
      }
    }

    customElements.define('product-carousel-modal-{{ ai_gen_id }}', ProductCarouselModal{{ ai_gen_id }});
  })();
</script>

