{% doc %}
  @prompt
    build a hero banner that we can upload 2 images (2520 x 1152 px for desktop view and 1170 x 1648 pc for mobile view) and the whole banner is clickable to be linked to a collection page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
    overflow: hidden;
  }

  .ai-hero-banner-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    text-decoration: none;
    cursor: pointer;
  }

  .ai-hero-banner-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 45.71%;
    overflow: hidden;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-banner-desktop-{{ ai_gen_id }} {
    display: block;
  }

  .ai-hero-banner-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-image-wrapper-{{ ai_gen_id }} {
      padding-bottom: 140.85%;
    }

    .ai-hero-banner-desktop-{{ ai_gen_id }} {
      display: none;
    }

    .ai-hero-banner-mobile-{{ ai_gen_id }} {
      display: block;
    }
  }
{% endstyle %}


{% schema %}
{
  "name": "Hero banner",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image",
      "info": "Recommended size: 2520 x 1152 px"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image",
      "info": "Recommended size: 1170 x 1648 px"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "collection",
      "id": "banner_link",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
