<!-- snippets/mega-menu.liquid -->
<div class="mega-menu-wrapper">
    <div class="mega-menu-container">
        <div class="mega-menu-column">
            <h3 class="mega-menu-title">Jewelry</h3>
            <ul class="mega-menu-list">
                <!-- First, display "New In" category if it exists -->
                {% for collection in collections %}
                {% assign metafield_value = collection.metafields.collection.collection_type | strip %}
                {% if metafield_value contains '"category"' and collection.title == 'New In' %}
                <li><a href="{{ collection.url }}" class="mega-menu-link">{{ collection.title }}</a></li>
                {% endif %}
                {% endfor %}

                <!-- Then display other categories, except personalization -->
                {% for collection in collections %}
                {% assign metafield_value = collection.metafields.collection.collection_type | strip %}
                {% if metafield_value contains '"category"' and collection.title != 'New In' and collection.title !=
                'Personalization' %}
                <li><a href="{{ collection.url }}" class="mega-menu-link">{{ collection.title }}</a></li>
                {% endif %}
                {% endfor %}
            </ul>
        </div>

        <div class="mega-menu-column">
            <h3 class="mega-menu-title">Collections</h3>
            <ul class="mega-menu-list">
                {% assign collection_count = 0 %}
                {% assign total_collections = 0 %}

                {% for collection in collections %}
                {% assign metafield_value = collection.metafields.collection.collection_type | strip %}
                {% if metafield_value contains '"collection"' %}
                {% assign total_collections = total_collections | plus: 1 %}
                {% if collection_count < 8 %} <li><a href="{{ collection.url }}" class="mega-menu-link">{{
                        collection.title }}</a></li>
                    {% assign collection_count = collection_count | plus: 1 %}
                    {% endif %}
                    {% endif %}
                    {% endfor %}
                    {% comment %} {% if total_collections > 8 %}
                    <li><a href="/collections" class="mega-menu-link mega-menu-link-all">See All Collections</a></li>
                    {% endif %} {% endcomment %}
            </ul>
        </div>

<!-- Basic Dynamic Personalization Column -->
<div class="mega-menu-column">
    <h3 class="mega-menu-title">Personalization</h3>
    <ul class="mega-menu-list">
        {% assign themes_list = '' %}
        
        {% comment %} Simple loop through products {% endcomment %}
        {% for product in collections.all.products limit: 50 %}
            {% if product.metafields.custom.personalization_themes %}
                {% assign theme_value = product.metafields.custom.personalization_themes | strip %}
                
                {% comment %} Remove JSON formatting: brackets and quotes {% endcomment %}
                {% assign clean_theme = theme_value | remove: '[' | remove: ']' | remove: '"' | strip %}
                
                {% comment %} Check for duplicates by splitting existing list {% endcomment %}
                {% assign already_exists = false %}
                {% if themes_list != '' %}
                    {% assign existing_themes = themes_list | split: ',' %}
                    {% for existing_theme in existing_themes %}
                        {% if existing_theme == clean_theme %}
                            {% assign already_exists = true %}
                            {% break %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                
                {% unless already_exists %}
                    {% if themes_list == '' %}
                        {% assign themes_list = clean_theme %}
                    {% else %}
                        {% assign themes_list = themes_list | append: ',' | append: clean_theme %}
                    {% endif %}
                {% endunless %}
            {% endif %}
        {% endfor %}
        
        {% comment %} Split and display themes in alphabetical order {% endcomment %}
        {% if themes_list != '' %}
            {% assign themes_array = themes_list | split: ',' | sort %}
            {% for theme in themes_array %}
                {% assign theme_handle = theme | downcase | replace: ' ', '-' %}
                <li><a href="{{ routes.collections_url }}/{{ theme_handle }}" class="mega-menu-link">{{ theme }}</a></li>
            {% endfor %}
        {% endif %}
    </ul>
</div>

