{% doc %}
  @prompt
    a strip with amended colour and also we can add some text on this strip
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-strip-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.strip_color }};
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-strip-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: 1.5;
  }

  .ai-strip-content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-strip-content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-strip-content-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }
{% endstyle %}

<div class="ai-strip-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-strip-content-{{ ai_gen_id }}">
    {% if block.settings.text != blank %}
      {{ block.settings.text }}
    {% else %}
      <p>Add your text here</p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Text strip",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Welcome to our store</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "strip_color",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "vertical_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Vertical padding",
      "default": 15
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "label": "Maximum width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 14
    }
  ],
  "presets": [
    {
      "name": "Text strip"
    }
  ]
}
{% endschema %}
