{% doc %}
  @prompt
    please add a pure text block under header - and make sure any part of it will not be covered by the header, please enable to change the font of text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-block-{{ ai_gen_id }} {
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_horizontal }}px;
    padding-right: {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-block__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-text-block__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-text-block__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    line-height: 1.6;
  }

  .ai-text-block__content-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-text-block__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-block-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top | times: 0.7 | round }}px;
      padding-bottom: {{ block.settings.padding_bottom | times: 0.7 | round }}px;
      padding-left: {{ block.settings.padding_horizontal | times: 0.7 | round }}px;
      padding-right: {{ block.settings.padding_horizontal | times: 0.7 | round }}px;
    }

    .ai-text-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 | round }}px;
    }

    .ai-text-block__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-block__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-text-block__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    {% if block.settings.text != blank %}
      <div class="ai-text-block__content-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% else %}
      <div class="ai-text-block__content-{{ ai_gen_id }}">
        <p>Add your text content here. You can customize the heading, text, colors, and spacing in the block settings.</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Text block",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Heading spacing",
      "default": 16
    },
    {
      "type": "font_picker",
      "id": "text_font",
      "label": "Text font",
      "default": "helvetica_n4"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Text block"
    }
  ]
}
{% endschema %}
