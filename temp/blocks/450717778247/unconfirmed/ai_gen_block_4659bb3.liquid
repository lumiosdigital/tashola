{% doc %}
  @prompt
    build a hero banner that we can upload images and the whole banner is clickable to be linked to a collection page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
    text-decoration: none;
  }

  .ai-hero-banner-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height_desktop }}px;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    pointer-events: none;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    width: 90%;
    max-width: {{ block.settings.content_max_width }}px;
    pointer-events: none;
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-hero-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<a
  href="{{ block.settings.collection_link }}"
  class="ai-hero-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  {% if block.settings.collection_link == blank %}aria-disabled="true"{% endif %}
>
  <div class="ai-hero-banner-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image %}
      <img
        src="{{ block.settings.banner_image | image_url: width: 2000 }}"
        alt="{{ block.settings.banner_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_image.width }}"
        height="{{ block.settings.banner_image.height }}"
        class="ai-hero-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
          Next, add a banner image
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    {% if block.settings.show_text_content %}
      <div class="ai-hero-banner-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-hero-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-hero-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</a>

{% schema %}
{
  "name": "Hero banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "range",
      "id": "banner_height_desktop",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 500
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 150,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 300
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "collection",
      "id": "collection_link",
      "label": "Collection"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity",
      "default": 0.3
    },
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "checkbox",
      "id": "show_text_content",
      "label": "Show text content",
      "default": true
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Collection"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest arrivals"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading size",
      "default": 18
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Content max width",
      "default": 700
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
