{% doc %}
  @prompt
    add a button with a customizable name and customer can click into this button and show a carousel of products from a collection I can choose  
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-trigger-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 600;
  }

  .ai-product-carousel-trigger-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-product-carousel-modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .ai-product-carousel-modal-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-product-carousel-modal-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.modal_bg_color }};
    border-radius: {{ block.settings.modal_border_radius }}px;
    padding: 40px;
    max-width: 1200px;
    width: 100%;
    position: relative;
    max-height: 90vh;
    overflow-y: auto;
  }

  .ai-product-carousel-close-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
    color: {{ block.settings.modal_text_color }};
    opacity: 0.7;
    padding: 5px 10px;
    line-height: 1;
  }

  .ai-product-carousel-close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-product-carousel-header-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-product-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.modal_title_size }}px;
    color: {{ block.settings.modal_text_color }};
    margin: 0;
  }

  .ai-product-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-carousel-container-{{ ai_gen_id }} {
    overflow: hidden;
    position: relative;
  }

  .ai-product-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    transition: transform 0.4s ease;
  }

  .ai-product-carousel-item-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - 60px) / 4);
    min-width: 0;
  }

  .ai-product-carousel-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-product-carousel-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-carousel-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-carousel-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-carousel-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-product-carousel-info-{{ ai_gen_id }} {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-carousel-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.modal_text_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-product-carousel-product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.modal_text_color }};
    margin-bottom: 12px;
  }

  .ai-product-carousel-product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    text-align: center;
    margin-top: auto;
    transition: background-color 0.3s ease;
  }

  .ai-product-carousel-product-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-product-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.3s ease;
  }

  .ai-product-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-product-carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-carousel-nav-prev-{{ ai_gen_id }} {
    left: -50px;
  }

  .ai-product-carousel-nav-next-{{ ai_gen_id }} {
    right: -50px;
  }

  .ai-product-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.modal_text_color }};
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-carousel-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 40px) / 3);
    }

    .ai-product-carousel-nav-prev-{{ ai_gen_id }} {
      left: -40px;
    }

    .ai-product-carousel-nav-next-{{ ai_gen_id }} {
      right: -40px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-carousel-item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 20px) / 2);
    }

    .ai-product-carousel-modal-content-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-product-carousel-nav-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-product-carousel-nav-next-{{ ai_gen_id }} {
      right: 10px;
    }

    .ai-product-carousel-nav-{{ ai_gen_id }} {
      width: 35px;
      height: 35px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-carousel-item-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }} {{ block.shopify_attributes }}>
  <button class="ai-product-carousel-trigger-{{ ai_gen_id }}" aria-label="{{ block.settings.button_text }}">
    {{ block.settings.button_text }}
  </button>

  <div class="ai-product-carousel-modal-{{ ai_gen_id }}" role="dialog" aria-modal="true" aria-labelledby="carousel-title-{{ ai_gen_id }}">
    <div class="ai-product-carousel-modal-content-{{ ai_gen_id }}">
      <button class="ai-product-carousel-close-{{ ai_gen_id }}" aria-label="Close">&times;</button>
      
      <div class="ai-product-carousel-header-{{ ai_gen_id }}">
        <h2 class="ai-product-carousel-title-{{ ai_gen_id }}" id="carousel-title-{{ ai_gen_id }}">
          {% if block.settings.modal_title != blank %}
            {{ block.settings.modal_title }}
          {% elsif block.settings.collection != blank %}
            {{ block.settings.collection.title }}
          {% else %}
            Products
          {% endif %}
        </h2>
      </div>

      {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
        <div class="ai-product-carousel-wrapper-{{ ai_gen_id }}">
          <button class="ai-product-carousel-nav-{{ ai_gen_id }} ai-product-carousel-nav-prev-{{ ai_gen_id }}" aria-label="Previous">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>

          <div class="ai-product-carousel-container-{{ ai_gen_id }}">
            <div class="ai-product-carousel-track-{{ ai_gen_id }}">
              {% for product in block.settings.collection.products limit: block.settings.products_limit %}
                <div class="ai-product-carousel-item-{{ ai_gen_id }}">
                  <div class="ai-product-carousel-card-{{ ai_gen_id }}">
                    <div class="ai-product-carousel-image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 400 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          class="ai-product-carousel-image-{{ ai_gen_id }}"
                          loading="lazy"
                          width="400"
                          height="400"
                        >
                      {% else %}
                        <div class="ai-product-carousel-image-placeholder-{{ ai_gen_id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="ai-product-carousel-info-{{ ai_gen_id }}">
                      <h3 class="ai-product-carousel-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                      <div class="ai-product-carousel-product-price-{{ ai_gen_id }}">
                        {{ product.price | money }}
                      </div>
                      <a href="{{ product.url }}" class="ai-product-carousel-product-link-{{ ai_gen_id }}">
                        {{ block.settings.view_product_text }}
                      </a>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>

          <button class="ai-product-carousel-nav-{{ ai_gen_id }} ai-product-carousel-nav-next-{{ ai_gen_id }}" aria-label="Next">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      {% else %}
        <div class="ai-product-carousel-empty-{{ ai_gen_id }}">
          Please select a collection with products to display
        </div>
      {% endif %}
    </div>
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerView = 4;
      }

      connectedCallback() {
        this.trigger = this.querySelector('.ai-product-carousel-trigger-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-product-carousel-modal-{{ ai_gen_id }}');
        this.closeBtn = this.querySelector('.ai-product-carousel-close-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-product-carousel-track-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-product-carousel-nav-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-product-carousel-nav-next-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-product-carousel-item-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.updateItemsPerView();
        this.updateCarousel();

        window.addEventListener('resize', () => {
          this.updateItemsPerView();
          this.updateCarousel();
        });
      }

      setupEventListeners() {
        this.trigger.addEventListener('click', () => this.openModal());
        this.closeBtn.addEventListener('click', () => this.closeModal());
        
        this.modal.addEventListener('click', (e) => {
          if (e.target === this.modal) {
            this.closeModal();
          }
        });

        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prev());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.next());
        }

        document.addEventListener('keydown', (e) => {
          if (this.modal.classList.contains('active')) {
            if (e.key === 'Escape') {
              this.closeModal();
            } else if (e.key === 'ArrowLeft') {
              this.prev();
            } else if (e.key === 'ArrowRight') {
              this.next();
            }
          }
        });
      }

      openModal() {
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }

      updateItemsPerView() {
        const width = window.innerWidth;
        if (width <= 480) {
          this.itemsPerView = 1;
        } else if (width <= 749) {
          this.itemsPerView = 2;
        } else if (width <= 989) {
          this.itemsPerView = 3;
        } else {
          this.itemsPerView = 4;
        }
      }

      updateCarousel() {
        if (!this.track || this.items.length === 0) return;

        const maxIndex = Math.max(0, this.items.length - this.itemsPerView);
        this.currentIndex = Math.min(this.currentIndex, maxIndex);

        const itemWidth = this.items[0].offsetWidth;
        const gap = 20;
        const offset = -(this.currentIndex * (itemWidth + gap));
        this.track.style.transform = `translateX(${offset}px)`;

        if (this.prevBtn) {
          this.prevBtn.disabled = this.currentIndex === 0;
        }

        if (this.nextBtn) {
          this.nextBtn.disabled = this.currentIndex >= maxIndex;
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
        }
      }

      next() {
        const maxIndex = Math.max(0, this.items.length - this.itemsPerView);
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateCarousel();
        }
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

