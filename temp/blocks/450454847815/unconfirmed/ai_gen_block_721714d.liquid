{% doc %}
  @prompt
    a section that i can title it by myself and below the title, put an optional sub-title, then below shows the products from a collection that i can choose from
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-products__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-collection-products__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-collection-products__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-collection-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collection-products__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-collection-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
    margin-bottom: 12px;
  }

  .ai-collection-products__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collection-products__item-{{ ai_gen_id }}:hover .ai-collection-products__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-products__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-products__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-products__info-{{ ai_gen_id }} {
    text-align: {{ block.settings.product_text_alignment }};
  }

  .ai-collection-products__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    text-decoration: none;
    display: block;
  }

  .ai-collection-products__product-title-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-collection-products__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
  }

  .ai-collection-products__price--compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-collection-products__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-collection-products__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-collection-products__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collection-products__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-collection-products__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.85);
    }

    .ai-collection-products-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 0 {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-products__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-collection-products__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-collection-products__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-collection-products__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_limit %}
      
      {% if collection.products.size > 0 %}
        <div class="ai-collection-products__grid-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-collection-products__item-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-collection-products__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-collection-products__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-collection-products__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>
              
              <div class="ai-collection-products__info-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-collection-products__product-title-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
                
                <div class="ai-collection-products__price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-collection-products__price--compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                  <span>{{ product.price | money }}</span>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-collection-products__empty-{{ ai_gen_id }}">
          This collection is empty. Add products to see them here.
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-products__empty-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</div>

