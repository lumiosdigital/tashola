{% doc %}
  @prompt
    can you help to build a image banner that we are able to upload images for desktop and mobile (2 different dimension for 2 devices) and also the whole banner is clickable to link to one of our collections (url starting with https://www.tashola.com/collections/) thank you!
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-responsive-banner-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-responsive-banner__link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    text-decoration: none;
    cursor: pointer;
  }

  .ai-responsive-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
  }

  .ai-responsive-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-responsive-banner__image-{{ ai_gen_id }}--mobile {
    display: none;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    min-height: 400px;
  }

  .ai-responsive-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 400px;
  }

  .ai-responsive-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-responsive-banner__image-{{ ai_gen_id }}--desktop {
      display: none;
    }

    .ai-responsive-banner__image-{{ ai_gen_id }}--mobile {
      display: block;
    }

    .ai-responsive-banner__placeholder-{{ ai_gen_id }} {
      min-height: 300px;
    }
  }
{% endstyle %}

<div class="ai-responsive-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.collection_url != blank %}
    <a href="{{ block.settings.collection_url }}" class="ai-responsive-banner__link-{{ ai_gen_id }}" aria-label="View collection">
  {% else %}
    <div class="ai-responsive-banner__link-{{ ai_gen_id }}">
  {% endif %}

    <div class="ai-responsive-banner__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.desktop_image != blank or block.settings.mobile_image != blank %}
        {% if block.settings.desktop_image != blank %}
          <img
            src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
            alt="{{ block.settings.desktop_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.desktop_image.width }}"
            height="{{ block.settings.desktop_image.height }}"
            class="ai-responsive-banner__image-{{ ai_gen_id }} ai-responsive-banner__image-{{ ai_gen_id }}--desktop"
          >
        {% endif %}

        {% if block.settings.mobile_image != blank %}
          <img
            src="{{ block.settings.mobile_image | image_url: width: 1000 }}"
            alt="{{ block.settings.mobile_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.mobile_image.width }}"
            height="{{ block.settings.mobile_image.height }}"
            class="ai-responsive-banner__image-{{ ai_gen_id }} ai-responsive-banner__image-{{ ai_gen_id }}--mobile"
          >
        {% endif %}
      {% else %}
        <div class="ai-responsive-banner__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-responsive-banner__empty-state-{{ ai_gen_id }}">
            Add desktop and mobile images to get started
          </div>
        </div>
      {% endif %}
    </div>

  {% if block.settings.collection_url != blank %}
    </a>
  {% else %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Responsive image banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "collection_url",
      "label": "Collection URL"
    }
  ],
  "presets": [
    {
      "name": "Responsive image banner"
    }
  ]
}
{% endschema %}
